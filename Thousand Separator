class Solution {
    public String thousandSeparator(int n) {
        int count=0;
        String res="";
        if(n==0)
        return "0";
        while(n>0){
            int last=n%10;
            n=n/10;
            res =last+res;
            count++;
            if(count==3 && n>0){
        res="."+res;
        count=0;
        }
        }
        
        return res;
    }
}
